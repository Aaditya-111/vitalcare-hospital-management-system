generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("PATIENT") // ADMIN, DOCTOR, PATIENT
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctor    Doctor?
  patient   Patient?
}

model Doctor {
  id           String        @id @default(cuid())
  userId       String        @unique
  name         String
  title        String
  description  String
  department   String
  experience   Int           @default(0)
  available    Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  schedules    DoctorSchedule[]
}

model DoctorSchedule {
  id        String   @id @default(cuid())
  doctorId  String
  dayOfWeek Int      // 0=Sunday, 1=Monday, etc.
  startTime String   // Format "HH:mm"
  endTime   String   // Format "HH:mm"
  isAvailable Boolean @default(true)
  
  doctor    Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@unique([doctorId, dayOfWeek, startTime])
}

model Patient {
  id           String        @id @default(cuid())
  userId       String        @unique
  name         String
  phone        String
  email        String?
  age          Int?
  gender       String?
  address      String?
  bloodGroup   String?
  allergies    String?
  chronicConditions String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  medicalRecords MedicalRecord[]
}

model MedicalRecord {
  id          String   @id @default(cuid())
  patientId   String
  diagnosis   String
  prescription String?
  notes       String?
  date        DateTime @default(now())
  
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
}

model Appointment {
  id              String   @id @default(cuid())
  patientId       String
  doctorId        String?
  patientName     String
  phone           String
  department      String
  preferredDate   DateTime
  preferredTime   String
  reasonForVisit  String
  status          String   @default("pending") // pending, confirmed, cancelled, completed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  patient         Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor          Doctor?  @relation(fields: [doctorId], references: [id])
}

model Bed {
  id          String   @id @default(cuid())
  bedNumber   String   @unique
  ward        String
  bedType     String
  available   Boolean  @default(true)
  patientName String?
  admittedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vaccination {
  id          String   @id @default(cuid())
  name        String
  type        String
  available   Boolean  @default(true)
  stock       Int      @default(0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChatHistory {
  id        String   @id @default(cuid())
  message   String
  response  String
  symptoms  String?
  department String?
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // e.g., "CREATE_APPOINTMENT", "UPDATE_PROFILE"
  entity    String   // e.g., "Appointment", "Doctor"
  entityId  String?
  details   String?  // JSON string for additional info
  ipAddress String?
  createdAt DateTime @default(now())
}
