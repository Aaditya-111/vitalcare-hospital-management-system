generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Doctor {
  id           String        @id @default(cuid())
  name         String
  title        String
  description  String
  department   String
  experience   Int           @default(0)
  available    Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
}

model Patient {
  id           String        @id @default(cuid())
  name         String
  phone        String
  email        String?
  age          Int?
  gender       String?
  address      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
}

model Appointment {
  id              String   @id @default(cuid())
  patientId       String
  doctorId        String?
  patientName     String
  phone           String
  department      String
  preferredDate   DateTime
  preferredTime   String
  reasonForVisit  String
  status          String   @default("pending")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  patient         Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor          Doctor?  @relation(fields: [doctorId], references: [id])
}

model Bed {
  id          String   @id @default(cuid())
  bedNumber   String   @unique
  ward        String
  bedType     String
  available   Boolean  @default(true)
  patientName String?
  admittedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vaccination {
  id          String   @id @default(cuid())
  name        String
  type        String
  available   Boolean  @default(true)
  stock       Int      @default(0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChatHistory {
  id        String   @id @default(cuid())
  message   String
  response  String
  symptoms  String?
  department String?
  createdAt DateTime @default(now())
}
